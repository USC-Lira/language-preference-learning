{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Feature Learning",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lang_pref_learning/feature_learning/learn_features.py",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "args": [
                "--initial-loss-check",
                "--data-dir=/scr/zyang966/language-preference-learning/data/data_img_obs_2",
                "--exp-name=finetune-bert-tiny-img-obs",
                "--bert-model=bert-tiny",
                "--use-bert-encoder",
                "--batch-size=64", 
                "--epochs=1",
                "--add-norm-loss",
                "--use-img-obs",
                "--traj-encoder=cnn"
            ]
        },

        {
            "name": "Python Debugger: Preference Learning",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lang_pref_learning/pref_learning/pref_based_learning.py",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "args": [
                "--env=metaworld",
                "--data-dir=data/metaworld_pref_learning",
                "--model-dir=exp/mw-t5-small_20240601_085453_lr_0.002_schedule_False",
                "--true-reward-dir=lang_pref_learning/pref_learning/true_rewards_mw/1",
                "--method=lang",
                "--traj-encoder=mlp",
                "--lang-model=t5-small",
                "--use-lang-encoder",
                "--seed=1",
                "--lr=5e-3",
                "--weight-decay=0.1",
                "--num-iterations=1",
                "--use-softmax",
                "--use-other-feedback",
                "--num-other-feedback=10",
                "--lang-temp=1.0",
                "--use-constant-temp",
                // "--use-img-obs"
            ]
        },
        {
            "name": "Python Debugger: Improve Trajectory",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lang_pref_learning/model_analysis/improve_trajectory.py",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "args": [
                "--env=metaworld",
                "--data-dir=data/metaworld",
                "--model-dir=exp/mw-t5-small_20240601_085453_lr_0.002_schedule_False",
                "--traj-encoder=mlp",
                "--lang-model=t5-small",
                "--use-bert-encoder",
                "--seed=42",
                "--iterations=15",
                "--num-trials=100"
            ]
        }
    ]
}